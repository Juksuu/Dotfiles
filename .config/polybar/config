[colors]
background = ${xrdb:background}
background-wm = ${xrdb:color8}
background-alt = ${xrdb:color0}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
primary = ${xrdb:color4}
alert = ${xrdb:color1}

[settings]
format-foreground =
format-underline = ${colors.primary}
format-background = ${colors.background-alt}
format-padding = 1
format-overline =
format-margin = 0
format-offset =
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
monitor = ${env:MONITOR:}
wm-restack = bspwm
bottom = true
enable-ipc = true
separator =

width = 100%
height = 24
offset-x = 0
offset-y = 0
radius = 0.0

module-margin-left = 0
module-margin-right = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = CodeNewRoman:pixelsize=11;
font-1 = HackNerdFont:pixelsize=11;
font-2 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;

modules-left = bspwm xwindow
modules-right = cpu-load linux time

tray-position = right
tray-padding = 1
tray-background = ${colors.background-alt}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

[module/bspwm]
type = internal/bspwm

enable-scroll = true
label-focused = %name%
label-focused-background = ${colors.background-wm}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

format-underline =
format-background =
format-padding =
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

; Separator in between workspaces
label-separator = |

[module/cpu-load]
type = internal/cpu
interval = 0.5
format-prefix = "💻 "

[module/linux]
type = custom/ipc
hook-0 = uname -r
initial = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

format-underline =
format-background =
format-padding =

[module/time]
type = custom/script
exec = date '+%d/%m/%Y %H:%M:%S'
label = "%output%"
interval = 5

